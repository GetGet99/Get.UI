    mc:Ignorable="d">
    <Grid Margin="32">
        <tabs:TabContainer
            x:Name="TabContainer"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Vertical"
            Alignment="Start"
            TabContainerCenterAlignmentResolvingMode="AlignLeftOrRight"
            ItemsSource="{x:Bind Strings}"
        >
            <tabs:TabContainer.Header>
                <Button Content="Button on header" Margin="0,0,0,0" />
            </tabs:TabContainer.Header>
            <tabs:TabContainer.InlineHeader>
                <Button Content="Button" Margin="0,0,8,0" />
            </tabs:TabContainer.InlineHeader>
            <tabs:TabContainer.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <tabs:TabItem Content="{x:Bind}"/>
                </DataTemplate>
            </tabs:TabContainer.ItemTemplate>
            <tabs:TabContainer.InlineFooter>
                <Button Content="New Window" Margin="0,0,8,0" Click="Button_Click" />
            </tabs:TabContainer.InlineFooter>
            <tabs:TabContainer.Footer>
                <Button Content="Button on footer" Margin="0,0,0,0" />
            </tabs:TabContainer.Footer>
        </tabs:TabContainer>
